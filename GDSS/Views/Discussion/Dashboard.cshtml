
@{
    ViewBag.Title = "Dashboard";
}

<head>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    @*<script src="https://kit.fontawesome.com/9486839852.js" crossorigin="anonymous"></script>*@

</head>






<!--header-->
<div class="page-header">
    <div class="container" style="padding: 0;">
        <div class="row">
            <div class="col-md-8 ">
                <h2><span class="glyphicon glyphicon-cog" id="gear"></span> Dashboard</h2>
            </div>
            <div class="col-md-4 ">
                <ul class="profilehead">
                    <li>@ViewBag.Moderator</li>
                    <li><a href="../Moderator/Logout">Log out</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>



<!--main section-->
<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group animated zoomIn">
                    <div class="list-group-item active  main-color-bg">
                        <span class="glyphicon glyphicon-cog"></span> Dashboard
                    </div>
                    <a href="~/Moderator/ModeratorRoom" class="list-group-item"> <span class="glyphicon glyphicon-user"></span> Moderator Room</a>
                    <a href="ToolHub" class="list-group-item"><span class="badge"></span><span class="glyphicon glyphicon-list-alt"></span> Tool Hub</a>
                    <a href="DiscussionRoom" class="list-group-item"><span class="badge"></span><span class="glyphicon glyphicon-pencil"></span> Discussion Room</a>
                    @*@{ var count = 0;
                            foreach (var i in Model.Participants)
                            {

                                count++;
                            }
                            <a href="users.html" class="list-group-item"><span class="badge">@count</span><span class="glyphicon glyphicon-user"></span> Participants</a>
                        }*@

                </div>

            </div>
            <div class="col-md-9">
                <div class="panel panel-default animated zoomIn">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Overview</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="well dash-box" style="cursor:pointer" onclick="location.href='../Moderator/ModeratorRoom'">
                                <h2><span class="glyphicon glyphicon-user"></span></h2>
                                <h4>Moderator Room</h4>
                            </div>
                        </div>
                        <div class="col-md-4 dash-box">
                            <div class="well" style="cursor:pointer" onclick="location.href='ToolHub'">
                                <h2><span class="glyphicon glyphicon-list-alt"></span></h2>
                                <h4>Tool Hub</h4>
                            </div>
                        </div>
                        <div class="col-md-4 dash-box">
                            <div class="well" style="cursor:pointer" onclick="location.href='DiscussionRoom'">
                                <h2><span class="glyphicon glyphicon-pencil"></span></h2>
                                <h4>Discussion Room</h4>
                            </div>
                        </div>
                        @*<div class="col-md-3 dash-box">
                                <div class="well">
                                    <h2><span class="glyphicon glyphicon-list-alt"></span></h2>
                                    <h4>!?</h4>
                                </div>
                            </div>*@
                    </div>
                </div>
                <div class="panel panel-default animated zoomIn">
                    <!-- Default panel contents -->
                    <div class="panel-heading main-color-bg">Participants</div>
                    <div class="panel-body">
                        <!-- Table -->
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Status</th>
                            </tr>
                            @foreach (var i in Model.Participants)
                            {
                                <tr>
                                    <td>@i.Name</td>
                                    <td>@i.Email</td>
                                    <td>@i.Username</td>
                                    <td>@i.Status</td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>









<style type="text/css">

    body {
        background: #f4f4f4;
    }



    .main-color-bg {
        background-color: #001e63 !important;
        border-color: #358e8b !important;
        color: #ffffff !important;
    }
    /* header */
    .page-header {
        background: #f4f4f4;
        border-bottom: solid 4px #001e63;
        color: black;
        display: inline-block;
        margin: 2% 16.8%;
    }







    .profilehead {
        display: flex;
        text-decoration: none;
        list-style: none;
        justify-content: space-around;
        margin-top: 6%;
        font-weight: bold;
    }



        .profilehead a {
            color: black;
        }

            .profilehead a:hover {
                filter: brightness(80%);
            }
</style>
